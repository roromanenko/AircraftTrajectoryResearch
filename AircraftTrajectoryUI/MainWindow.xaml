<Window x:Class="AircraftTrajectoryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Aircraft Simulation" Height="600" Width="800">

    <StackPanel Margin="20">
        <!-- Кнопка запуску -->
        <Button Content="Запустити симуляцію" 
                Click="RunSimulation_Click" 
                Margin="0,0,0,20"/>

        <!-- Радіо-кнопки -->
        <StackPanel Orientation="Horizontal" 
                    Visibility="Collapsed" 
                    x:Name="ModeSelector"
                    Margin="0,0,0,20">
            <RadioButton x:Name="TableRadio"
                         Content="Таблиця"
                         GroupName="ViewMode"
                         Checked="TableRadio_Checked"
                         Margin="0,0,20,0"/>
            <RadioButton x:Name="GraphRadio"
                         Content="Графік"
                         GroupName="ViewMode"
                         Checked="GraphRadio_Checked"/>
        </StackPanel>

        <!-- Таблиця -->
        <DataGrid x:Name="ResultsTable"
                  AutoGenerateColumns="True"
                  Visibility="Collapsed"
                  Height="250"
                  Margin="0,0,0,20"/>

        <!-- Графік -->
        <oxy:PlotView x:Name="TrajectoryPlot"
                      Height="300"
                      Visibility="Collapsed"
                      Margin="0,0,0,20"/>

        <!-- Параметри знизу -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <TextBlock Text="w:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="WInput" Text="5" Width="60" Margin="0,0,20,0"/>

            <TextBlock Text="NV:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="NVInput" Text="30" Width="60" Margin="0,0,20,0"/>

            <TextBlock Text="Z0:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="Z0Input" Text="50" Width="60" Margin="0,0,20,0"/>

            <TextBlock Text="ControlLaw:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="ControlLawInput" Text="1" Width="60" Margin="0,0,20,0"/>

            <Button Content="Перерахувати симуляцію"
                    Click="RunSimulation_Click"
                    Width="180"
                    Height="28"/>
        </StackPanel>
    </StackPanel>
</Window>
